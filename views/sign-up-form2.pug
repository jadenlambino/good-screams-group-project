div(class='signup-container')
    img(id='blood-dripping-img' src='../images/blood-dripping.png')
    form(action="/users/signup" method="post")
        input(type="hidden" name="_csrf" value=csrfToken)
        h2 Sign Up...
        div(id="firstname-container")
            label(for="firstName") First Name:
            input(type="text" name="firstName" id="firstName" value=newUser.firstName)
        div(id="lastname-container")
            label(for="lastName") Last Name:
            input(type="text" name="lastName" id="lastName" value = newUser.lastName)
        div(id="email-container")
            label(for="email") Email:
            input(type="email" name="email" id="email" value = newUser.email)
        div(id="pass-container")
            label(for="hashedPassword") Password:
            input(type="password" name="hashedPassword" id="hashedPassword")
        div(id="passconf-container")
            label(for="confirmPassword") Confirm Password:
            input(type="password" name="confirmPassword" id="confirmPassword")
        div(class="button-container")
            button(id='cancel-button') Cancel
            button(id='signup-button') Submit
    if errors
        div(id='errors')
            ul
                each error in errors
                    li= error
