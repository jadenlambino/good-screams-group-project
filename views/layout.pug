doctype html
html
  head
      block head
        title= title
        link(rel="stylesheet",href="/stylesheets/zombie-font.css",type="text/css",charset="utf-8")
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/movies.css')
        link(rel='stylesheet' href='/stylesheets/movie-info.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        link(rel="stylesheet", href="/stylesheets/home.css")
        link(rel="stylesheet", href="/stylesheets/lists.css")
        link(rel="stylesheet", href="/stylesheets/dropdown.css")
        script(src='/javascripts/searchbar_dynamic.js' type='module')
        link(rel="stylesheet", href="/stylesheets/error.css")
        link(rel="stylesheet", href="/stylesheets/page-not-found.css")
        link(rel="stylesheet", href="/stylesheets/model.css")
        link(rel="stylesheet", href="/stylesheets/search-dropdown.css")


  body
    header
      div(class='navbar')
          a(id='title' href="/home") GOOD SCREAMS

          nav
            ul
              li
                a(href='/movies' class='click') Movies
              li
                a(href='/mylists' class='click') My Movies
              li
                div(class='search')
                  form(action='' autocomplete = "off")
                    input(class='bar', type="search", name="search", placeholder='Search Movies')
                    include includes/drop-down.pug
                    button(class='searchbutton')
              li
                if locals.authenticated
                  form(class='click' action='/users/logout' method='post')
                    button(class='btn' type='submit') LOGOUT
                else
                  span(class='userSpan')
                    a(class='click' href='/users/login') LOG IN
                    a(class='click' href='/users/signup') SIGN UP
    block content
